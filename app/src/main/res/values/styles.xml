<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="titleBarStyle">@style/darkTitleBar</item>
    </style>

    <style name="btnMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/comMenuHeight</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/titleSizeSub</item>
        <item name="android:background">@drawable/list_item_selectedbg</item>
        <item name="android:drawableLeft">@mipmap/icon_mine_setting</item>
        <item name="android:drawablePadding">@dimen/n22px</item>
        <item name="android:paddingLeft">@dimen/defaultPadding</item>

    </style>


    <style name="SplashTheme" parent="@style/AppBaseTheme">
        <item name="android:windowBackground">@drawable/logo_splash</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--按钮样式红色-->
    <style name="btnRed">
        <item name="appBgColor">@color/startRed</item>
        <item name="appBgColorEnd">@color/endRed</item>
        <item name="appDisableAlpha">0.5</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/btnTextSize</item>
    </style>
    <!--按钮样式蓝色-->
    <style name="btnBlue">
        <item name="appBgColor">@color/startBlue</item>
        <item name="appBgColorEnd">@color/endBlue</item>
        <item name="appDisableAlpha">0.5</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/btnTextSize</item>
    </style>
</resources>
