<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:textSize="@dimen/titleTextSize"
        android:textColor="@color/defaultTextColor"
        android:padding="@dimen/defaultPadding"
        android:text="设置-权限管理-打开图示权限"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/defaultPadding"
        android:src="@mipmap/ic_help2" />

    <include
        layout="@layout/view_line_1_deep"
        />

    <TextView
        android:layout_width="match_parent"
        android:text="设置-省电策略-无限制"
        android:textSize="@dimen/titleTextSize"
        android:textColor="@color/defaultTextColor"
        android:padding="@dimen/defaultPadding"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="match_parent"
        android:padding="@dimen/defaultPadding"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_help1" />


    <TextView
        android:layout_width="match_parent"
        android:text="如无图示提示,需打开悬浮窗权限,步骤为:\n设置-权限管理-显示悬浮窗"
        android:textSize="@dimen/titleTextSize"
        android:textColor="@color/defaultTextColor"
        android:padding="@dimen/defaultPadding"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="match_parent"
        android:padding="@dimen/defaultPadding"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_help_toast" />



</LinearLayout>