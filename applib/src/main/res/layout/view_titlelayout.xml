<?xml version="1.0" encoding="utf-8"?><!-- 顶部栏 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/titleBarHeight">
    <!-- 返回键 -->

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/colorWhiteStyleTextColor"
        android:textSize="@dimen/titleSize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvRight"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:paddingLeft="@dimen/n30px"
        android:paddingRight="@dimen/n30px"
        android:textColor="@color/colorWhiteStyleTextColor"
        android:textSize="@dimen/titleSizeSub"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvLeft"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:drawableLeft="@mipmap/ic_back_black"
        android:gravity="center"
        android:paddingLeft="@dimen/n30px"
        android:paddingRight="@dimen/n30px"
        android:textColor="@color/colorWhiteStyleTextColor"
        android:textSize="@dimen/titleSizeSub"
        android:visibility="visible" />


    <!--联赛-->
    <ImageView
        android:id="@+id/ivRightSecond"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/tvRight"
        android:background="?attr/selectableItemBackground"
        android:paddingLeft="@dimen/n29px"
        android:paddingRight="@dimen/n29px"
        android:src="@mipmap/ic_back_black"
        android:visibility="gone" />

    <com.hd.view.roundrect.ShapeCornerBgView
        android:id="@+id/tvLeftNum"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/n26px"
        android:layout_alignLeft="@id/tvLeft"
        android:layout_marginLeft="@dimen/n60px"
        android:layout_marginTop="@dimen/n20px"
        android:paddingLeft="@dimen/n10px"
        android:paddingRight="@dimen/n10px"
        android:text="99"
        android:textColor="@color/white"
        android:textSize="@dimen/s20px"
        app:appBgColor="@color/_DD4A4A"
        app:appRadius="@dimen/n13px" />

    <com.hd.view.roundrect.ShapeCornerBgView
        android:id="@+id/tvRightNum"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/n26px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/n20px"
        android:layout_marginTop="@dimen/n20px"
        android:paddingLeft="@dimen/n10px"
        android:paddingRight="@dimen/n10px"
        android:text="99"
        android:textColor="@color/white"
        android:textSize="@dimen/s20px"
        app:appBgColor="@color/_DD4A4A"
        app:appRadius="@dimen/n13px" />
</RelativeLayout>